    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\js\\index.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/js/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Nodemon",
            "program": "${workspaceFolder}/node_modules/nodemon/bin/nodemon.js"
        }
    ]
}